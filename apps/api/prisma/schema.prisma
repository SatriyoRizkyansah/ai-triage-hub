generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Ticket {
  id           String   @id @default(uuid())
  email        String
  message      String
  category     String?
  sentiment    Int?
  urgency      String?
  draftReply   String?
  status       TicketStatus @default(PENDING)
  createdAt    DateTime @default(now())
  processedAt  DateTime?
}

enum TicketStatus {
  PENDING
  PROCESSING
  COMPLETED
  RESOLVED
  FAILED
}
